@model BloggieMvc.Models.ViewModels.RegisterViewModel

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-12">

            <h1 class="mt-3 mb-3 h3">Register</h1>
            
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input class="form-control" id="username" type="text" asp-for="Username" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" id="email" type="email" asp-for="Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input class="form-control" id="password" type="password" asp-for="Password" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-primary">Register</button>
                </div>  
            </form>

        </div>
    </div>
</div>