@{
}
@model IList<BloggieMvc.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List Tags</h1>
    </div>
</div>


<div class="container py-3">
    @if (Model != null && Model.Any())
    {
      <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">DisplayName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayName</td>
                        <td><a style="text-decoration:none" asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@item.Id">Edit Tag</a></td>
                    </tr>
                }
            
            </tbody>
        </table>
        <div class="mb-3">
            <a class="btn btn-outline-success float-end" asp-controller="AdminTags" asp-action="Add">Add new Tag</a>
        </div>
    }

    else
    {
    <p class="text-danger">No tags found...</p>
    }
</div>