@{
}
@model List<BloggieMvc.Models.Domain.BlogPost>


<div class="container py-5">
    @if(Model !=null && Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in item.Tags)
                                {
                                    <span class="badge bg-primary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <span class="text-danger">Blogs null</span>
    }
</div>